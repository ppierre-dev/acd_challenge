{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-lg-5 col-md-8 col-sm-10">
				<div class="card shadow-lg">
					<div class="card-header bg-primary text-white">
						<h3 class="card-title">Inscription</h3>
					</div>
					<div class="card-body">
						<h4 class="mb-3">Remplissez le formulaire d'inscription</h4>
						{{ form_start(registrationForm) }}
						{{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom', 'required': 'required'}}) }}
						{{ form_row(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom', 'required': 'required'}}) }}
						{{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre email', 'required': 'required'}}) }}
						{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Votre mot de passe', 'required': 'required'}, 'label': 'Mot de passe'}) }}
						{{ form_row(registrationForm.agreeTerms, {'label': 'J\'accepte les conditions générales'}) }}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
          {{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
