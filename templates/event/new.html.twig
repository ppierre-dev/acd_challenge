{% extends 'base.html.twig' %}

{% block title %}Nouvel événement
{% endblock %}

{% block body %}

	<div class="container w-50">
		<div class="row justify-content-center align-items-center">
			<div class="col w-50">
				<h2 class="text-center">Nouvel événement</h2>
				{{ form_start(form) }}
				<div class="form-group my-custom-class-for-errors">
					{{ form_errors(form) }}
				</div>

				<div class="form-row">
					<div class="form-group">
						{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="form-group">
						{{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-row">
					<div class="form-group">
						{{ form_row(form.date_inscription, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="form-group">
						{{ form_row(form.user_id, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<button type="submit" class="btn btn-primary btn-block mt-3">S'inscrire</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
